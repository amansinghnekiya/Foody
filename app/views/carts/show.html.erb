<h2>Cart show</h2>
<ul>
<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
  <% @cart.order_items.each do |order_item| %>
    <li>Item: <%= order_item.item.name %>/ Price: <%= number_to_currency(order_item.item.price, unit:'Rs. ' ) %>/ Quantity: <%= order_item.quantity %>/ Total Price: <%= number_to_currency(order_item.total_price, unit:'Rs. ') %>
    <ul>
      <li>
        <%= link_to "Add one", order_item_add_path(:id => order_item), data: { turbo_method: :post } %>
        <%= link_to "Reduce one", order_item_reduce_path(:id => order_item), data: { turbo_method: :post } %>
      </li>
      <li>
        <%= link_to "Remove item", order_item_path(order_item), data: { turbo_method: :delete }%>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.total_price, unit:'Rs. ') %></h3>
<%= link_to "Empty cart", cart_path(@cart),data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% if cart_count_over_one %>
  <%= link_to "Order", new_order_path %><br>
<% end %>
<%= link_to "checkout", checkout_path %>