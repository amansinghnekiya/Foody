<div class="container">
  <h1>Success!</h1>
  <p>Your order placed</p>

  <h2>Your total was Rs. <%= @session.amount_total.to_f / 100 %>
  <% @line_items.each do |item| %>
    <h3><%= item.description %></h3>
    <br/>
    <p>Rs. <%= item.price.unit_amount.to_f / 100 %></p>
    <% product = Stripe::Product.retrieve(item.price.product) %>
    <%= image_tag(product.images.first, width: 300) %>
  <% end %>
</div>