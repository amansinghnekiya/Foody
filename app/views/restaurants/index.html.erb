<% if @restaurants.empty? %>
  <div class="alert alert-info">
    <h2>No results found.</h2>
  </div>
<% else %>
  <div class="d-flex input-group w-auto">
    <%= form_tag( restaurants_path, method: "get") do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Search restaurants", class: "form-control" %>
        <div class="input-group-btn">
          <%= button_tag "search", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil %>
        </div>
      </div>
    <% end %>
   </div>
<% end %>

<div class= "column is-14">
<% @restaurants.each do |restaurant| %>
 <%= link_to restaurant_path(restaurant) do %>
    <h5>Restaurant: <%= restaurant.name %></h5>
 <% end %>
 <h5>Description: <%= restaurant.description %></h5>
 <% if restaurant.image.present? %>
        <%= image_tag(restaurant.image, class: "image") %>
    <% end %>
 <hr />
<% end %>
<%= paginate @restaurants %>
</div>